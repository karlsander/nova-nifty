{
    "identifier": "kall.prettier",
    "name": "Prettier",
    "vendor": "kall",
    "description": "Format files with the prettier formatter.",
    "version": "1.0",
    "categories": [],
    "main": "main.js",
    "activationEvents": [
        "onLanguage:javascript"
    ],
    "entitlements": {},
    "commands": {
        "editor": [
		    {
		    	"title": "Format with Prettier",
		    	"command": "prettier.format",
                "shortcut": "shift-alt-f",
                "when": "editorHasFocus",
                "filters": {
                    "syntaxes": ["html", "javascript", "typescript"]
                }
		    }
	    ]
    }
}
